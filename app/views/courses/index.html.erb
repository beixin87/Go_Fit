<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>
courses count: <%= @courses.count%>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name </th>
      <th>Instrutor </th>
      <th>Limit </th>
      <th>Fee </th>
      <th>Numberofenrolled </th>
      <th>Start </th>
      <th>End </th>
      <th colspan="7"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.name, course %></td>
        <% instrutor=User.find(course.user_id) %>
        <td><%= instrutor.name %></td>
        <td><%= course.limit %></td>
        <td><%= course.fee %></td>
        <td><%= course.numberofenrolled %></td>
        <td><%= course.start %></td>
        <td><%= course.end %></td>


        <% if current_user.type == "manager"%>
        <td><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <%end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
