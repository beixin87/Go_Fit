
<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
    <%= render 'shared/error_messages' %>
  <div class="form-inputs">
    <%= f.input :name , class: 'form-control'%>
    <%= f.input :email, class: 'form-control' %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>

    <%if current_user%>
      <% if current_user.admin? %>
        <%= f.label :type %> (Student,Instructor,Manager)
        <%= f.text_field :type, class: 'form-control' %>
      <% end %>
    <% end %>

    <%= f.label :height %> (cm)
    <%= f.number_field :height, class: 'form-control' %>

    <%= f.label :weight %> (kg)
    <%= f.number_field :weight, class: 'form-control' %>

    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>

    <%= f.label :date_of_birth %> (m/d/y)
    <%= f.date_field :date_of_birth, class: 'form-control' %>
  </div>
<br>
  <div class="form-actions" >
    <%= f.button :submit ,class:  "btn btn-primary"%>
  </div>
<% end %>
