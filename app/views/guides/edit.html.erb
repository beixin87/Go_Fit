

<% provide(:title, "Edit guide") %>

<h1>Update your guide</h1>

<div class="container">  
  <%= simple_form_for(@guide) do |f| %>     
    <div class="form-inputs">
      <%= f.input :title %></br>
      <%= f.input :content, as: :summernote %></br>
    </div> 
      
    <div class-"form-actions">
      <%= f.button :submit,'Change my guide', class: "btn btn-primary" %>
    </div>  
  <% end %> 
 
</div>
